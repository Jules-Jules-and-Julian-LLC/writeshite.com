<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.writinggame.db.mappers.Player">
    <resultMap id="playerResultMap" type="com.writinggame.model.Player">
        <id column="id"/>
        <result property="username" column="username"/>
        <result property="lobbyId" column="lobby_id"/>
        <result property="clientId" column="client_id"/>
    </resultMap>

    <select id="find" resultMap="playerResultMap">
        SELECT *
        FROM player
        WHERE player.lobby_id = #{lobbyId}
        AND player.username = #{username}
    </select>

    <insert id="insert">
        INSERT INTO player(
            username,
            lobby_id,
            client_id
        )
        VALUES (
            #{username},
            #{lobbyId},
            #{clientId}
        )
    </insert>

    <select id="selectPlayers" resultMap="playerResultMap">
        SELECT * FROM player;
    </select>
</mapper>